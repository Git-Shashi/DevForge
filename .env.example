# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/devforge
MONGODB_DB_NAME=devforge

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Docker
DOCKER_HOST=/var/run/docker.sock
DOCKER_PROJECTS_PATH=~/docker-projects
DOCKER_NETWORK_NAME=devforge-network
DOCKER_BASE_IMAGE=node:18-alpine

# Port Ranges for Containers
FRONTEND_PORT_START=50000
FRONTEND_PORT_END=60000
BACKEND_PORT_START=60001
BACKEND_PORT_END=70000

# Redis (Optional - for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Resource Limits per Container
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5
CONTAINER_SWAP_LIMIT=256m

# Health Check Settings
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000

# WebSocket
WS_PORT=3001
WS_PATH=/api/websocket

# Logging
LOG_LEVEL=info
